<p3dnodes>
<input name="Normal" type="vec4"/>
<node name="declarations" unique="yes">
vec4 SimpleShading( vec4 N ) {<br/>
  return vec4( vec3( max( 0, dot( N.xyz, normalize( vec3( 1 ))))), 1 );<br/>
}<br/>
</node>

<node name="declarations_vshader">
<link list="yes" target=":*.declarations_vshader;:*.declarations"/>
</node>

<node name="forward_vshader">
<link list="yes" target=":*.forward_vshader"/>
</node>

<node name="declarations_fshader">
<link list="yes" target=":*.declarations_fshader;:*.declarations"/>
</node>

<node name="vshader">
SimpleShading(
<link target=":Normal.vshader"/>
)
</node>

<node name="fshader">
SimpleShading(
<link target=":Normal.fshader"/>
)
</node>

</p3dnodes>
